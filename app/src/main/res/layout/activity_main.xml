<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Оглавление страницы Playlist maker -->
    <LinearLayout style="@style/pageMain"
        tools:ignore="MissingConstraints">
        <TextView style="@style/pageMainHead"
            android:text="@string/playlistMaker"  />
    </LinearLayout>
    <LinearLayout style="@style/pageMainBoxForButtons"
        tools:ignore="MissingConstraints">

        <!-- Обьект "Поиск"  -->
        <Button android:id="@+id/search"
            android:text="@string/search"
            app:icon="@drawable/ic_search"
            style="@style/pageMainButton" >
        </Button>

        <!-- Обьект "Медиатека" -->
        <Button android:id="@+id/media"
            android:text="@string/mediateka"
            app:icon="@drawable/ic_media2"
            style="@style/pageMainButton">
        </Button>

        <!-- Обьект "Настройки" -->
        <Button android:id="@+id/settings"
            android:text="@string/settings"
            app:icon="@drawable/ic_settings"
            style="@style/pageMainButton">
        </Button>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>