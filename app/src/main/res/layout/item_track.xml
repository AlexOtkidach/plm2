<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <ImageView
        android:id="@+id/artworkImageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:src="@drawable/placeholder"
        android:background="@drawable/image_background_rounded" />/>

    <!-- Основной контейнер для текстовых полей -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="16dp">

        <!-- Название трека -->
        <TextView
            android:id="@+id/trackNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Название трека"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Исполнитель и Время трека в одном TextView -->
        <TextView
            android:id="@+id/artistAndTimeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Исполнитель • Время трека"
            style="@style/LightTextStyle"
            android:layout_marginTop="4dp" />
    </LinearLayout>
</LinearLayout>
