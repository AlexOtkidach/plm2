<resources>
    <!-- СТИЛИ ГЛАВНОЙ СТРАНИЦЫ ^_^ -->

    <!-- Стиль для бокса с заголовком страницы и фоном -->
    <style name="pageMain">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/backgroundColor</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingRight">@dimen/padding12dp</item>
        <item name="android:paddingBottom">@dimen/padding12dp</item>
        <item name="android:paddingLeft">@dimen/padding12dp</item>
    </style>

    <!-- Стиль для заголовка страницы -->
    <style name="pageMainHead">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:textSize">@dimen/head24</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Стиль для бокса с тремя кнопками -->
    <style name="pageMainBoxForButtons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginTop">80dp</item>
        <item name="android:paddingRight">@dimen/padding16dp</item>
        <item name="android:paddingBottom">28dp</item>
        <item name="android:paddingLeft">@dimen/padding16dp</item>
    </style>

    <!-- Стиль для кнопок -->
    <style name="pageMainButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/head24</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">@dimen/padding16dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">@dimen/padding16dp</item>
        <item name="android:paddingRight">@dimen/padding16dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:foreground">?attr/selectableItemBackground</item> // тактильная подсветка
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/black</item>
        <item name="cornerRadius">16dp</item>
    </style>

    <!-- Стиль для ToolBar -->
    <style name="ToolbarTheme" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/backgroundSettingsPage</item>
    </style>


    <!-- СТИЛИ СТРАНИЦЫ ПОИСКА ^_^ -->

    <!-- Стиль для бокса страницы поиска -->
    <style name="pageMainSearchBox">
        <item name="android:background">@drawable/ic_search2</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>
    <style name="pageMainSearch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- Стиль для иконки поска  -->
    <style name="pageMainloup">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:tint">@color/iconColor</item>
        <item name="srcCompat">@drawable/ic_search</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_marginTop">13dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <!-- Стиль для ToolBar -->
    <style name="ToolbarTheme2" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/backgroundSettingsPage</item>
    </style>

    <!-- Стиль для иконки очистки поля поиска  -->
    <style name="iconX">
        <item name="srcCompat">@drawable/ic_x</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:tint">@color/iconColor</item>
    </style>

    <!-- Стиль для поля ввода текста -->
    <style name="textPassingPage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:hint">@string/search</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">16</item>
    </style>

    <!-- Стиль Wrap для страницы поиска -->
    <style name="wrapSeach">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>
</resources>