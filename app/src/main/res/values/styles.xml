<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Стиль для кнопки отображения -->
    <style name="displayButton">
        <item name="android:fontFamily">@font/ys_display_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Стиль для кнопки отображения в настройках -->
    <style name="displayButtonSettings">
        <item name="android:fontFamily">@font/ys_display_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Стиль для основной кнопки приложения -->
    <style name="appButton">
        <item name="android:background">@drawable/ic_button_shadow</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Тема приложения в обычном режиме -->
    <style name="appTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@color/backgroundColor</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:statusBarColor">@color/colorPrimaryVariant</item>
    </style>

    <!-- Стиль для текста Настройки в toolBar -->
    <style name="SettingsText">
        <item name="android:fontFamily">@font/ys_display_bold</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/black</item>

    </style>
</resources>
