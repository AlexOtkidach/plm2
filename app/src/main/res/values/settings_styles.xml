<resources>
    <!-- Стиль для строки заголовка страницы настроек -->
    <style name="page_settings_string_head">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>

        <item name="android:paddingTop">@dimen/padding4dp</item>
        <item name="android:paddingRight">52dp</item>
        <item name="android:paddingBottom">@dimen/padding4dp</item>
        <item name="android:paddingLeft">@dimen/padding4dp</item>

        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">28dp</item>
    </style>

    <!-- Стиль для кнопки "Стрелка назад" -->
    <style name="page_settings_arr_back">
        <item name="android:layout_width">@dimen/ico48</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:src">@drawable/ic_arrow_back</item>
        <item name="android:contentDescription">@string/arr</item>
        <item name="android:tint">@color/iconColor</item>
    </style>

    <!-- Стиль для текста заголовка настроек -->
    <style name="page_settings_text_settings">
        <item name="android:text">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingRight">86dp</item>
        <item name="android:paddingBottom">@dimen/padding12dp</item>
        <item name="android:paddingLeft">@dimen/padding12dp</item>
        <item name="android:textColor">@color/txtSettingsPage</item>
        <item name="android:textSize">26sp</item>
    </style>

    <!-- Стиль для текста строки "Ночная тема" -->
    <style name="page_settings_text_night_theme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingTop">@dimen/padding24dp</item>
        <item name="android:paddingBottom">@dimen/padding24dp</item>
        <item name="android:textColor">@color/txtSettingsPage</item>
        <item name="android:textSize">@dimen/text16</item>
    </style>

    <!-- Стиль для переключателя ночной темы -->
    <style name="page_settings_switch">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">@dimen/padding12dp</item>
        <item name="android:paddingRight">@dimen/padding12dp</item>
        <item name="android:paddingLeft">9dp</item>
        <item name="android:layout_gravity">end</item>
    </style>

    <!-- Стиль для простой строки -->
    <style name="page_settings_string_simple">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingTop">19dp</item>
        <item name="android:paddingRight">@dimen/padding12dp</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="android:paddingLeft">@dimen/padding16dp</item>
    </style>

    <!-- Стиль для настроек -->
    <style name="page_settings_string_frame">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Стиль для текста настроек -->
    <style name="page_settings_string_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/txtSettingsPage</item>
        <item name="android:textSize">@dimen/text16</item>
        <item name="android:layout_marginRight">52dp</item>
    </style>

    <!-- Стиль для иконки настроек -->
    <style name="page_settings_string_icon">
        <item name="android:layout_width">@dimen/ico24</item>
        <item name="android:layout_height">@dimen/ico24</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:tint">@color/iconColor</item>

    </style>
</resources>
